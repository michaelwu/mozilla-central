DEPTH            = ../..
topsrcdir        = @top_srcdir@
srcdir           = @srcdir@
VPATH            = @srcdir@

include $(DEPTH)/config/autoconf.mk

MODULE           = dom
LIBRARY_NAME     = domfm_s
XPIDL_MODULE     = dom_fm
LIBXUL_LIBRARY   = 1
FORCE_STATIC_LIB = 1

include $(topsrcdir)/dom/dom-config.mk

ifeq ($(MOZ_BUILD_APP),b2g)
CPPSRCS += \
  FMRadio.cpp \
  $(NULL)
endif

XPIDLSRCS = \
  nsIDOMFMRadio.idl \
  nsIFMRadio.idl \
  $(NULL)

EXTRA_COMPONENTS =      \
  DOMFMRadio.js       \
  DOMFMRadio.manifest \
  $(NULL)

ifeq ($(MOZ_BUILD_APP),b2g)
EXTRA_JS_MODULES =   \
  FMRadioService.jsm \
  $(NULL)
endif

include $(topsrcdir)/config/rules.mk
include $(topsrcdir)/ipc/chromium/chromium-config.mk

